<div class="row">

            <div class="col-lg-12">
                <h1 class="page-header">Event registration
                    <small>Welcome abroad!</small>
                </h1>
            </div>

        </div>
<div class="container">

<%if @event.steps.index(@event.current_step)==0%>
<div class="progress progress-striped">
  <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 50%">
    <span>50% Complete </span>
  </div>
</div>
<%else%>
<div class="progress progress-striped">
  <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
    <span>Almost there! </span>
  </div>
</div>
<%end%>
  
<div class="row">
	<div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
		<%=nested_form_for @event, :html=>{:multipart=>true}, role: 'form' do |f| %>
      <h2>Get excited!!!<small>It's just for you</small></h2>
      <hr class="colorgraph">
      <%if @society.present?%>
                <%= f.hidden_field :society_id,:value=> @society.id%>
   <p><small>** You are creating event for <%=@society.name%><small></p><%end%>
  <%= render "#{@event.current_step}", :f => f %>
  <p><%= f.submit "Continue",class: "btn btn-primary btn-block btn-lg"%></p>
  <p><%= f.submit "Back", :name => "back_button" unless @event.first_step? %></p>
     <hr class="colorgraph">
<% end %>

<% if @event && @event.errors.any? %>
    <ul class="Signup_Errors">
    <% for message_error in @event.errors.full_messages %>
      <li>* <%= message_error %></li>
    <% end %>
    </ul>
<%end%>
  </div>
        
</div>
</div>