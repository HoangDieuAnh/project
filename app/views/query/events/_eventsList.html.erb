<hr class="colorgraph">
      <% events.each do |event|%>
        <div class="row">
             
            <div class="col-lg-7 col-md-7">
                <a href="#">
                    <img class="img-responsive" src="/data/eventImages/event.jpg" alt="">
                </a>
            </div>
            
            <div class="col-lg-5 col-md-5">
                <h3><%= event.title%></h3>
                <h4><small>Type: <%=event.eventType%><small></h4>
                <h4><small>Date: <%=event.eventDate%><small></h4>
                <h4><small>Location: <%=event.venue%><small></h4>
                <p><%=truncate(event.description, length: 200){link_to "Continue", event}%><p>
                <%= link_to 'More >>', event, class: "btn btn-primary"%>
                <% @admin=Society.find_by session[:user_id]%>
                <% if @admin.id==event.society_id && session[:user_id]!=nil%>
                 <%= link_to 'Edit', edit_event_path(event), class: 'btn btn-primary'  %>
                <%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary' %>
                <%end%>
            </div>

        </div>


        <hr class="colorgraph">
        <%end%>

        <div class="row text-center">

            <div class="col-lg-12">
                <ul class="pagination">
                    <li><a href="#">&laquo;</a>
                    </li>
                    <li class="active"><a href="#">1</a>
                    </li>
                    <li><a href="#">2</a>
                    </li>
                    <li><a href="#">3</a>
                    </li>
                    <li><a href="#">4</a>
                    </li>
                    <li><a href="#">5</a>
                    </li>
                    <li><a href="#">&raquo;</a>
                    </li>
                </ul>
            </div>

        </div>

        <hr>