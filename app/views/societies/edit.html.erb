 <div class="row">

            <div class="col-lg-12">
                <h1 class="page-header">Society update
                    <small>Welcome abroad!</small>
                </h1>
            </div>

        </div>

<div class="container">
<%if @society.steps.index(@society.current_step)==1%>
<div class="progress progress-striped">
  <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 50%">
    <span>50% Complete </span>
  </div>
</div>
<%else%>
<div class="progress progress-striped">
  <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
    <span>Almost there! </span>
  </div>
</div>
<%end%>
<div class="row">

    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
      <%= form_for @society,  role:'form' do |s| %>
      <h2>Ready to join? <small>It's just for you</small></h2>
      <hr class="colorgraph">
      <%= render "#{@society.current_step}", :s => s %>
      <p><%= s.submit "Continue",class: "btn btn-primary btn-block btn-lg"%></p>
      <p><%= s.submit "Back", :name => "back_button" unless @society.first_step? %></p>




      
      
      <hr class="colorgraph">
      
    <%end%>
    <% if @society && @society.errors.any? %>
    <ul class="Signup_Errors">
    <% for message_error in @society.errors.full_messages %>
      <li>* <%= message_error %></li>
    <% end %>
    </ul>
  <% end %>
  </div>
</div>

</div>




