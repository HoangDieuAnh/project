<div class="container">

<div class="row">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
      <%= form_for @user , :url=>{controller: 'users', action: 'update',method: "patch", id: @user.id},role: 'form' do |f| %>
      <h2>Update !!<small>It's just for you</small></h2>
      <hr class="colorgraph">
      <div class="form-group">
        <label> First Name</label>
        <%= f.text_field :first_name, class: "form-control input-lg", placeholder: 'First Name' %>
      </div>
      <div class="form-group">
                <label> Middle Name</label>

        <%= f.text_field :middle_name, class: "form-control input-lg", placeholder: 'Middle Name' %>
      </div>
      <div class="form-group">
                <label> Last  Name</label>

        <%= f.text_field :last_name, class: "form-control input-lg", placeholder: 'Last Name' %>
      </div>
      <div class="form-group">
                <label> Email</label>

        <%= f.text_field :email, class: "form-control input-lg", placeholder: 'Email' %>
      </div>
      <div class="form-group">
                <label> Phone</label>

        <%= f.phone_field :phone, class: "form-control input-lg", placeholder: 'Phone' %>
      </div>
      <div class="form-group">
                <label> Mobile</label>

        <%= f.phone_field :mobile, class: "form-control input-lg", placeholder: 'Mobile' %>
      </div>
      <div class="form-group">
                <label> Username</label>

        <%= f.text_field :name, class: 'form-control input-lg', placeholder: 'Username' %>
      </div>
      <div class="form-group">
                <label> Password</label>

        <%= f.password_field :password, class: 'form-control input-lg', placeholder: 'Password' %>
      </div>
      <div class="form-group">
                <label> Password confirmation</label>

        <%= f.password_field :password_confirmation, class: 'form-control input-lg', placeholder: 'Confirm password' %>
      </div>
     
      
      <hr class="colorgraph">
      <div class="row">
        <div class="col-xs-6 col-md-6"><%= f.submit 'Update' , class: "btn btn-primary btn-block btn-lg" %></div>
      </div>
    <%end%>
    <% if @user.errors.any? %>
    <ul class="Signup_Errors">
    <% for message_error in @user.errors.full_messages %>
      <li>* <%= message_error %></li>
    <% end %>
    </ul>
  <% end %>
  </div>
</div>

</div>